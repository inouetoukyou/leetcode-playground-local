function(build_all_cpp)
    FILE(GLOB_RECURSE SRC_FILES "*.cpp")
    FOREACH(FILE_PATH ${SRC_FILES})
        STRING(REGEX REPLACE ".+/(.+)\\..*" "\\1" FILE_NAME ${FILE_PATH})
        add_executable(${FILE_NAME} ${FILE_NAME}.cpp)
    ENDFOREACH(FILE_PATH)
endfunction()

